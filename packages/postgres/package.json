{
  "name": "@jobster/postgres",
  "version": "0.0.1",
  "main": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "production": {
        "require": "./dist/cjs/index.js",
        "import": "./dist/esm/index.js"
      },
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "node --watch --no-warnings=ExperimentalWarning --experimental-strip-types src/main.ts",
    "test": "node --test --no-warnings=ExperimentalWarning --experimental-strip-types test/**/*.test.ts",
    "start": "node dist/esm/main.js",
    "build": "rm -rf dist || true && tsc"
  },
  "peerDependencies": {
    "@jobster/core": "^0.0.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "@jobster/core": "workspace:*",
    "pg": "^8.13.0"
  }
}
