{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES6",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "noEmit": false,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "allowJs": false,
    "composite": true
  },
  "include": ["src"],
  "references": [{ "path": "../jobster" }]
}
