{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "declaration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "allowJs": false,
  },
  "include": ["./"],
  "references": [{ "path": "../../jobster" }, { "path": ".." }]
}
