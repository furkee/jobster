{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "allowJs": false,
    "composite": true
  },
  "include": ["lib"],
}
